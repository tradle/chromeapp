{
  "name": "Tradle",
  "description": "Tradle blockchain apps",
  "minimum_chrome_version": "33",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "Logo-16.png",
    "128": "Logo-128.png"
  },
  "app": {
  	"background": {
      "scripts": ["bundle.js"]
    }
  },
  "permissions": [
    "webview",
  	"pushMessaging",
  	"notifications",
    "http://*/*",
    "storage",
    "unlimitedStorage",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "sockets": {
    "udp": {
      "bind": "*",
      "send": "*"
    },
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*"
    }
  }
}
